{
  "build": {
    "vsMinVersion": "16.0.0",
    "cmakeMinVersion": "3.15.0",
    "defaultConfiguration": "Debug",
    "defaultPlatform": "all"
  },
  "project": {
    "description": "Multi-platform retro gaming emulator",
    "version": "1.0.0",
    "name": "Mega_Emu"
  },
  "paths": {
    "build": "build",
    "scripts": "scripts",
    "source": "src",
    "deps": "deps",
    "docs": "docs"
  },
  "mcpServers": {
    "github.com/modelcontextprotocol/servers/tree/main/src/git": {
      "command": "uvx",
      "args": ["mcp-server-git", "--repository", "path/to/git/repo"]
    }
  }
}
