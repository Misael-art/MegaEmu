# EditorConfig is awesome: https://EditorConfig.org

# Configuração raiz
root = true

# Configurações padrão para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Arquivos C/C++
[*.{c,h,cpp,hpp}]
indent_size = 4
max_line_length = 100

# Arquivos CMake
[CMakeLists.txt]
indent_size = 2

[*.cmake]
indent_size = 2

# Arquivos de configuração
[*.{json,yml,yaml}]
indent_size = 2

# Arquivos Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Arquivos de shell script
[*.sh]
end_of_line = lf

# Arquivos de Windows
[*.{cmd,bat}]
end_of_line = crlf

# Arquivos de documentação
[docs/**/*.md]
max_line_length = 80

# Arquivos de teste
[tests/**/*]
indent_size = 4

# Arquivos de exemplo
[examples/**/*]
indent_size = 4

# Ignorar arquivos gerados
[{build,dist,node_modules}/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
